---
import '../styles/global.css';
import Logo from "../components/Logo.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from 'astro:transitions';
export interface Props {
	title?: string; // El "?" indica que es opcional, por defecto es "Reflexiones de sillón"
	description?: string;
}
const { title = "Biblioteca",
		description = "Biblioteca de libros"
} = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/phicon.svg" /> <!-- icono de la web -->
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} /> <!-- generador de la web -->
		<title>{title}</title> 
		<ClientRouter /> <!-- router para las transiciones -->
	</head>
	<body>
        <header>
            <Logo />
            <Navigation />
        </header>

        <main>
            <slot />
        </main>
        <footer>
            <Footer />            
        </footer>       
	</body>
</html>

<style>
/* === RESPONSIVE BASE LAYOUT === */
/* Estrategia de capas visuales */
body {
    background-color: #f5f5f5; /* Base más suave */
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
    padding: 0;
    gap: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
}

/* Header responsivo */
header {
    padding: 1rem;
    background: var(--header-bg, #fff);
    border-bottom: 1px solid var(--border-color, #e5e5e5);
}

/* Main content responsivo */
main {
    flex: 1;
    padding: 1rem;
    max-width: 100%;
    overflow-x: hidden; /* Previene scroll horizontal */
}

/* Footer responsivo */
footer {
    padding: 1rem;
    background: var(--footer-bg, #f8f9fa);
    border-top: 1px solid var(--border-color, #e5e5e5);
}

/* === BREAKPOINTS RESPONSIVOS === */

/* Tablets (768px y arriba) */
@media (min-width: 768px) {
    body {
        gap: 1.5rem;
    }
    
    header {
        padding: 1.5rem 2rem;
    }
    
    main {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
    }
    
    footer {
        padding: 1.5rem 2rem;
    }
}

/* Desktop (1024px y arriba) */
@media (min-width: 1024px) {
    body {
        gap: 2rem;
    }
    
    header {
        padding: 2rem;
    }
    
    main {
        padding: 2rem 3rem;
    }
    
    footer {
        padding: 2rem;
    }
}

/* Desktop grande (1440px y arriba) */
@media (min-width: 1440px) {
    main {
        max-width: 1400px;
        padding: 3rem;
    }
}

/* === UTILIDADES RESPONSIVAS === */

/* Imágenes responsivas por defecto */
:global(img) {
    max-width: 100%;
    height: auto;
}

/* Tablas responsivas */
:global(table) {
    width: 100%;
    overflow-x: auto;
    display: block;
    white-space: nowrap;
}

@media (min-width: 768px) {
    :global(table) {
        display: table;
        white-space: normal;
    }
}

/* Contenedores de texto responsivos */
:global(.text-container) {
    max-width: 65ch;
    line-height: 1.6;
}

/* Ocultar elementos en móvil */
:global(.hide-mobile) {
    display: none;
}

@media (min-width: 768px) {
    :global(.hide-mobile) {
        display: block;
    }
}

/* Mostrar solo en móvil */
@media (min-width: 768px) {
    :global(.show-mobile) {
        display: none;
    }
}
</style>